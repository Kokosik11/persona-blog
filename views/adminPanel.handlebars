<link rel="stylesheet" href="/assets/css/admin.css">

<h1 class="admin-heading">Admin Panel</h1>

<a href="/admin/post/add">
    <div class="admin-writeblog">
        <span class="write">+</span>
        <span class="description">Новый пост</span>
    </div>
</a>

<div class="posts">
    {{#each posts}}
        <div class="admin_post" id="{{this._id}}">
            <span>{{this._id}}</span>
            <span>{{this.title}}</span>

            <div class="post-btns">
                <form class="edit" action="/admin/post/{{this._id}}/update" method="get">
                    <button class="edit-btn">Изменить</button>
                </form>

                <form class="delete" action="/admin/post/{{this._id}}/delete" method="post">
                    <button class="delete-btn">Удалить</button>
                </form>
            </div>
        </div>
    {{/each}}
</div>

<form class="exit" action="/admin/logout">
    <button>
        <svg width="24" height="24" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M24 20V16H14V12H24V8L30 14L24 20ZM22 18V26H12V32L0 26V0H22V10H20V2H4L12 6V24H20V18H22Z" fill="white"/>
        </svg>

        <div class="description">Выйти</div>
    </button>
</form>

